<div id="body">
    <section class="content-wrapper clear-fix">
        <h3>W naszej klinice leczą następujący doktorzy:</h3>
        <div id="usersList">
            <table>
                <thead>
                    <tr>
                        <th>
                            Zdjęcie
                        </th>
                        <th>
                            Tytuł
                        </th>
                        <th>
                            Imię
                        </th>
                        <th>
                            Nazwisko
                        </th>
                        <th>Usuń</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr onclick="location.href='@Url.Action("Details", "Doctors", new { id = item.Id})'" onmouseover="">
                            <td>
                                <img style="width: 100px; height: auto" src='@Url.Action("GetImage", "Doctors", new { id = item.Id })' />
                            </td>
                            <td>
                                @item.Titles
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.Surname
                            </td>
                            <td>
                                @Html.ActionLink("Edytuj doktora", "Edit", new { id = item.Id, returnUrl = Url.Action("Index") })
                                @Html.ActionLink("Usuń doktora", "Delete", new { id = item.Id, returnUrl = Url.Action("Index") }, new { @class = "post-link-confirm", @data_confirm_text = String.Format("Czy na pewno chcesz usunąć {0} {1}?", item.Name, item.Surname) })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @*<div class="pagedList" data-aib-target="#usersList">
                    @Html.PagedListPager(Model, page => Url.Action(null, new { page }),
                        PagedListRenderOptions.ClassicPlusFirstAndLast)
                </div>*@
        </div>
        <div>
            <h2>@Html.ActionLink("Dodaj doktora", "Create")</h2>
        </div>
    </section>
</div>
