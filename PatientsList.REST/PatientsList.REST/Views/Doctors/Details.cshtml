                        <div>Nazwisko: @Html.DisplayFor(patientItem => patient.CheckTime)</div>
                        <div>@Html.ActionLink("Usuń wizytę", "RemovePatient", new { patientId = patient.Id, returnUrl = Url.Action(null) }, new { @class = "post-link-confirm", @data_confirm_text = "Czy na pewno chcesz usunąć wizytę?" })</div>
                    </li>
                }
            </ol>*@
        <div id="usersList">
            <table>
                <thead>
                    <tr>
                        <th>
                            Zdjęcie
                        </th>
                        <th>
                            Imię i Nazwisko
                        </th>
                        <th>Usuń</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <img style="width: 100px; height: auto" src='@Url.Action("GetImage", "Doctors", new { id = item.Id })' />
                            </td>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @Html.ActionLink("Usuń wizytę", "Delete", new { doctorId = ViewBag.Doctor.Id, visitId = item.Id}, new { @class = "post-link-confirm", @data_confirm_text = "Czy na pewno chcesz usunąć wizytę?" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div>
            @Html.ActionLink("Dodaj wizytę", "Create", "Visits", new { doctorId = ViewBag.Doctor.Id }, null)
        </div>
    </section>
</div>

